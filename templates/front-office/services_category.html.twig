{% extends 'front-office/bases/base2.html.twig' %}


{% block content %}

    {% for id,page in pages %}
        <section class="row category-section mx-0">
            {% if id%2 == 0 %}
                <div class="category-img-box col-12 col-md-6  px-0">
                    <img src="{{ asset('assets/img/') }}{{ page.picture }}" alt="{{ page.title }}">
                </div>
                <div class="category-text-box col-12 col-md-6">
                    {% if id == 0 %}
                        <h1 class="category-h1">Vos {{ cat }}</h1>
                    {% endif %}
                    <h2 class="category-h2">{{ page.title }}</h2>
                    <p>{{ page.text|raw }}</p>
                </div>
            {% else %}
                <div class="order-2 order-md-1 category-text-box-color category-text-box col-12 col-md-6">
                    {% if id == 0 %}
                        <h1 class="category-h1">Vos {{ cat }}</h1>
                    {% endif %}
                    <h2 class="category-h2">{{ page.title }}</h2>
                    <p>{{ page.text|raw }}</p>
                </div>
                <div class="order-1 order-md-2 category-img-box col-12 col-md-6  px-0">
                    <img src="{{ asset('assets/img/') }}{{ page.picture }}" alt="{{ page.title }}" class="img-fluid">
                </div>
            {% endif %}

        </section>
    {% endfor %}


{% endblock %}