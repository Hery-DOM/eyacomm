{% extends 'back-office/base/base.html.twig' %}

{% block content %}

    {% for message in app.flashes('info') %}
        <p>{{ message }}</p>
    {% endfor %}


    <h1>Envoi d'un mail généralisé</h1>

    <form action="#" method="POST">
        <label for="subject">Objet du mail*</label>
        <div>
            <input type="text" name="subject" id="subject" required>
        </div>

        <label class="general-email-label" for="recipients">Destinataires</label>
        <div class="container-fluid general-email-container">
                    {% for user in users %}
                        <span class="general-email-recipients">
                            <input type="checkbox" name="recipient-{{ user.username }}" id="{{ user.username }}" value="{{ user.email }}" checked>
                            <label for="{{ user.username }}">{{ user.username }}</label>
                        </span>


                    {% endfor %}
        </div>

        <label for="message">Message du mail*</label>
        <div>
            <textarea name="message" id="message" cols="80" rows="10" class="ckeditor" required></textarea>
        </div>

        <input class="my-3" type="submit" name="submit" value="Envoyer">

    </form>
    <script src="{{ asset('bundles/fosckeditor/ckeditor.js') }}"></script>

{% endblock %}