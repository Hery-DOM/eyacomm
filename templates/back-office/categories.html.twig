{% extends 'back-office/base/base.html.twig' %}

{% block content %}
    <button><a href="{{ path('create_category') }}">Créer une catégorie</a></button>

    {% for category in categories %}
        <div>
            <h2>{{ category.name }}</h2>
            <button><a href="{{ path('update_category',{'id': category.id}) }}">Modifier</a></button>
            <button><a onclick="confirmRemove('{{ path('remove_category',{'id':category.id}) }}')">Supprimer</a></button>
        </div>

    {% endfor %}

{% endblock %}